<p>
    Genre: @Html.TextBox("searchString")
    Title: @Html.TextBox("searchString")
    <input type="submit" value="Search" />
    
</p>

@if (ViewBag.Movies != null && ViewBag.Movies.Count > 0)

{

<table>
    <thead>
        <tr>
            <th>Title></th>
                <th>ReleaseDate</th>
                <th>Genre</th>
                <th>Price</th>
        </tr>
    </thead>


<tbody>
    @foreach (var movie in ViewBag.Movies)

    {
    <tr>
        <td>@movie.Title</td>
                <td>@movie.ReleaseDate</td>
                <td>@movie.Genre</td>
                <td>@movie.Price</td>
    </tr>
    <td>
    <a href="@Url.Action("Edit", "Movie", new { id = movie.Id })">Edit</a> |
    <a href="@Url.Action("Details", "Movie", new { id = movie.Id })">Details</a> |
    <a href="@Url.Action("Delete", "Movie", new { id = movie.Id })">Delete</a> 
            </td>
            
    }
        </tbody>
    </table>
    }
    else
    {
         <p>No movies found.</p>
    }
